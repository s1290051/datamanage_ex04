import java.util.Random;

public class ex04
{

    public static void main(String[] arg)
    {
	String[] head;
	head = {"Heads","Tails"};

	Random ran = new Random();
	
	int value;
	value = 0;


	System.out.println("Tossing a coin...");
	int x;
	int y;
	y = x+1;
	
	for(x = 0;x < 3;++x)
	    {
		String status;
		status = head[ran.nextInt(3)]
		    
		    System.out.println("Round" + y + ":" + head);

		if(head == head[0])value++;

	    }



	int number;
	number = 3-value;

	System.out.println("Heads:" + value + ", Tails:" + number);}}
